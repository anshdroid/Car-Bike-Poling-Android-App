<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview2"
    android:layout_width="410dp"
    android:layout_height="250dp"
    android:layout_gravity="center_horizontal"
    android:layout_margin="5dp"
    card_view:cardElevation="6dp"
    card_view:contentPadding="5dp"
    card_view:cardCornerRadius="6dp"
    card_view:cardMaxElevation="5dp"
    card_view:cardBackgroundColor="#00bfff">

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="fill_parent"
        android:layout_height="121dp"
        android:background="#00bfff"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="77dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/logo111" />


        <TextView
            android:id="@+id/input_source"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView"
            android:layout_toEndOf="@+id/textView"
            android:text="Source"
            android:textColor="#fff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/input_destination"
            android:layout_width="155dp"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="65dp"
            android:text="Destination"
            android:textColor="#fff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/input_name"
            android:layout_width="78dp"
            android:layout_height="34dp"
            android:layout_alignEnd="@+id/imageView"
            android:layout_below="@+id/imageView"
            android:text="Name"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/imageView"
            android:layout_marginStart="110dp"
            android:text="Pick Up: "
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView"
            android:layout_toStartOf="@+id/input_destination"
            android:text="Drop: "
            android:textSize="20dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative2"
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:layout_marginTop="120dp"
        android:background="#fff">

        <TextView
            android:id="@+id/input_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="114dp"
            android:layout_marginTop="14dp"
            android:text="Phone Number"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/input_mobile"
            android:layout_marginStart="27dp"
            android:text="Mobile: "
            android:textColor="#000"
            android:textSize="20dp"
             />

        <TextView
            android:id="@+id/input_time"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="13dp"
            android:layout_marginStart="81dp"
            android:text="Time"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="13dp"
            android:layout_marginEnd="-81dp"
            android:layout_toStartOf="@+id/input_time"
            android:text="Time: "
            android:textColor="#000"
            android:textSize="20dp"
           />

        <TextView
            android:id="@+id/input_date"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/input_time"
            android:layout_marginEnd="12dp"
            android:text="Date"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/input_time"
            android:layout_marginEnd="121dp"
            android:text="Date: "
            android:textColor="#000"
            android:textSize="20dp"
             />

        <TextView
            android:id="@+id/input_seat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="143dp"
            android:text="Seat"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="26dp"
            android:text="No. of Seats: "
            android:textColor="#000"
            android:textSize="20dp" />


    </RelativeLayout>

</android.support.v7.widget.CardView>