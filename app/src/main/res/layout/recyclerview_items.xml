<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview1"
    android:layout_width="410dp"
    android:layout_height="300dp"
    android:layout_gravity="center_horizontal"
    android:layout_margin="5dp"
    card_view:cardElevation="10dp"
    card_view:contentPadding="5dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardBackgroundColor="#00bfff"
    card_view:cardMaxElevation="5dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="130dp"
        android:background="#00bfff"
        android:padding="10dp">

        <TextView
            android:id="@+id/input_source"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/input_destination"
            android:layout_alignParentTop="true"
            android:text="Source"
            android:textColor="#fff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/dest"
            android:layout_alignTop="@+id/input_source"
            android:text="Source: "
            android:textColor="#fff"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="79dp"
            android:layout_height="67dp"
            android:layout_alignStart="@+id/input_name"
            android:layout_alignTop="@+id/input_source"
            android:src="@drawable/logo111" />

        <TextView
            android:id="@+id/input_name"
            android:layout_width="86dp"
            android:layout_height="41dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/dest"
            android:layout_marginStart="18dp"
            android:text="Name"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="16dp" />


        <TextView
            android:id="@+id/input_destination"
            android:layout_width="196dp"
            android:layout_height="60dp"
            android:layout_alignTop="@+id/dest"
            android:layout_toEndOf="@+id/dest"
            android:text="Destination"
            android:textColor="#fff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/dest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView"
            android:layout_marginStart="21dp"
            android:layout_toEndOf="@+id/imageView"
            android:text="Destination: "
            android:textColor="#fff"
            android:textSize="20dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="130dp"
        android:background="#fff">

        <TextView
            android:id="@+id/input_mobile"
            android:layout_width="141dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="102dp"
            android:layout_marginTop="16dp"
            android:text="Phone Number"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/input_mobile"
            android:layout_marginStart="28dp"
            android:text="Mobile: "
            android:textColor="#000"
            android:textSize="20dp"
            />


        <TextView
            android:id="@+id/input_time"
            android:layout_width="67dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/input_vehical"
            android:layout_alignTop="@+id/input_date"
            android:layout_marginEnd="-22dp"
            android:text="Time"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/input_date"
            android:layout_toStartOf="@+id/input_time"
            android:text="Time: "
            android:textColor="#000"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/input_date"
            android:layout_width="91dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/date"
            android:layout_toEndOf="@+id/date"
            android:text="Date"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/phone"
            android:layout_marginBottom="47dp"
            android:text="Date: "
            android:textColor="#000"
            android:textSize="20dp"
             />

        <TextView
            android:id="@+id/input_vehical"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="88dp"
            android:layout_marginTop="50dp"
            android:text="Vehicle No."
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/phone"
            android:layout_alignTop="@+id/input_vehical"
            android:text="Vehicle No.: "
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/input_seat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/input_vehical"
            android:layout_alignTop="@+id/seat"
            android:text="Seat"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/seat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="-1dp"
            android:layout_toStartOf="@+id/input_vehical"
            android:text="No. of Seats:  "
            android:textColor="#000"

            android:textSize="20dp" />

        <TextView
            android:id="@+id/input_fare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/input_seat"
            android:layout_marginEnd="21dp"
            android:text="Free"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/fare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/input_time"
            android:layout_alignTop="@+id/input_seat"
            android:text="Fare/Person:"
            android:textColor="#000"
            android:textSize="20dp"
           />

    </RelativeLayout>

</android.support.v7.widget.CardView>